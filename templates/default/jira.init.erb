#!/bin/bash
# JIRA startup script - adapted from 5.2 script installation
# Dynamically generated by Chef on <%= node["fqdn"] %>
# Local modifications will be overwritten by Chef.
#chkconfig: 2345 80 05
#description: Atlassian JIRA

### BEGIN INIT INFO
# Provides:          jira
# Required-Start:    $local_fs $remote_fs $network $syslog $named
# Required-Stop:     $local_fs $remote_fs $network $syslog $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# X-Interactive:     true
# Short-Description: Start/stop Atlassian JIRA standalone server
### END INIT INFO

# Source function library.
. /etc/rc.d/init.d/functions

# JIRA Linux service controller script
APP=JIRA
BASE=<%= node['jira']['install_path'] %>
cd "$BASE/bin"

case "$1" in
    start)
        echo "Starting $APP"
        $BASE/bin/start-jira.sh
        ;;
    stop)
        echo "Stopping $APP"
        $BASE/bin/stop-jira.sh
        ;;
    restart)
        stop
        start
        ;;
    status)
        status -p $BASE/work/catalina.pid $APP
        ;;
    *)
        echo "Usage: $0 {start|restart|stop|status}"
        exit 1
        ;;
esac
